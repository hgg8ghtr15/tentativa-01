<%- include("../partes/header.ejs") %>

  <body>
    <%- include("../partes/navebar.ejs") %>
      <div class="container">
        <div class="card">
          <div class="card-header">
            <div class="d-flex justify-content-between">
              <h3>Cadastro de Patrimonio</h3>
              <a class="btn btn-primary" href="/patrimonio">Voltar</a>
            </div>
          </div>
          <div class="card-body">
            <form method="post" action="/patrimonio/cadastrar">
              <div class="row">
                <div class="form-group col-6">
                  <label for="inputEmail4">Nome</label>
                  <input type="text" name="nome" value="Computador" class="form-control" id="inputEmail4" placeholder="Nome">
                </div>
                <div class="form-group col-6">
                  <label for="inputPassword4">Tipo</label>
                  <input type="text" name="tipo" value="Informática" class="form-control" id="inputPassword4" placeholder="Tipo">
                </div>
              </div>
              <div class="row">

                <div class="form-group col-6">
                  <label for="inputEmail4">Número</label>
                  <input type="text" name="numero" value="0001" class="form-control" id="inputEmail4" placeholder="Numero">
                </div>
              
                <div class="form-group col-md-6">
                  <label for="inputState">Local</label>
                  <select id="inputState" name="local" class="form-control">
                    <option selected disabled="disabled">Selecione um local</option>
                    <option valor="Local A" >Local A</option>
                    <option valor="Local B" >Local B</option>
                    <option valor="Local C" >Local C</option>
                    <option valor="Local D" >Local D</option>
                  </select>
                </div>
              </div>
              
              <br>
              <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>
          </div>
        </div>
      </div>
  </body>

  <%- include("../partes/footer.ejs") %>